@model AZERS.Models.RegisterViewModel
@{
    ViewBag.Title = "Registracija";
}

<h2 class="description">@ViewBag.Title</h2>
<hr />
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = " center height", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="login">
        <h4 class="prijava_naslov center">Kreirajte novi račun.</h4>
        <div class="form-group center">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-4 prijava_label" })
            <hr />
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group center ">
            @Html.Label("Lozinka","Lozinka", new { @class = "col-md-4 prijava_label" })
            <div class="col-md-8">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group center ">
            @Html.Label("PotvrdaLozinke","Potvrda lozinke", new { @class = "col-md-4 prijava_label" })
            <div class="col-md-8">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-4 col-md-8">
                <input type="submit" class="btn btn_prijava" value="Registracija" />
            </div>
        </div>
    </div>


}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
